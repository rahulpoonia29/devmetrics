{
    "name": "devmetrics",
    "publisher": "Rahul",
    "displayName": "DevMetrics",
    "description": "Gain insights into your coding activity directly within VS Code! This extension automatically tracks basic code metrics like lines of code added and removed within your project folders.  View session summaries in the Output Panel to monitor your coding progress locally.  Start understanding your coding habits today!",
    "version": "0.0.1",
    "engines": {
        "vscode": "^1.97.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onStartupFinished"
    ],
    "main": "./dist/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "devmetrics.selectFolder",
                "title": "Select Folder"
            },
            {
                "command": "devmetrics.startTracking",
                "title": "Start Tracking"
            },
            {
                "command": "devmetrics.stopTracking",
                "title": "Stop Tracking"
            },
            {
                "command": "devmetrics.statusBarClicked",
                "title": "Status Bar Clicked"
            },
            {
                "command": "devmetrics.showMetrics",
                "title": "Show Metrics"
            }
        ],
        "configuration": {
            "title": "DevMetrics",
            "properties": {
                "devmetrics.projectFolderPath": {
                    "type": "string",
                    "default": "",
                    "description": "The project folder to track metrics for."
                },
                "devmetrics.trackingEnabled": {
                    "type": "boolean",
                    "default": false,
                    "description": "Whether or not to track metrics for the project folder."
                },
                "devmetrics.analysisIntervalMinutes": {
                    "type": "number",
                    "default": 10,
                    "minimum": 1,
                    "maximum": 60,
                    "description": "Interval in minutes between analysis runs"
                },
                "devmetrics.excludedPaths": {
                    "type": "array",
                    "default": [
                        "node_modules/**",
                        ".git/**"
                    ],
                    "description": "Glob patterns for paths to exclude from tracking"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "pnpm run package",
        "compile": "pnpm run check-types && pnpm run lint && node esbuild.js",
        "watch": "npm-run-all -p watch:*",
        "watch:esbuild": "node esbuild.js --watch",
        "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
        "package": "pnpm run check-types && pnpm run lint && node esbuild.js --production",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "pnpm run compile-tests && pnpm run compile && pnpm run lint",
        "check-types": "tsc --noEmit",
        "lint": "eslint src",
        "test": "vscode-test",
        "prepare": "husky"
    },
    "lint-staged": {
        "**/*": "prettier --write --ignore-unknown"
    },
    "devDependencies": {
        "@types/fs-extra": "^11.0.4",
        "@types/mocha": "^10.0.10",
        "@types/node": "22.x",
        "@types/vscode": "^1.97.0",
        "@typescript-eslint/eslint-plugin": "^8.24.1",
        "@typescript-eslint/parser": "^8.24.1",
        "@vscode/test-cli": "^0.0.10",
        "@vscode/test-electron": "^2.4.1",
        "esbuild": "^0.25.0",
        "eslint": "^9.20.1",
        "eslint-config-prettier": "^10.0.1",
        "husky": "^9.1.7",
        "lint-staged": "^15.4.3",
        "npm-run-all": "^4.1.5",
        "prettier": "3.5.2",
        "typescript": "^5.7.3"
    },
    "dependencies": {
        "fs-extra": "^11.3.0",
        "parse-git-diff": "^0.0.17",
        "simple-git": "^3.27.0"
    }
}
